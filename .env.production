# Production Environment Variables for Mem

# Registry Configuration
REGISTRY_URL=registry.sdelcore.com
REGISTRY_USER=sdelcore

# GPU Configuration
NVIDIA_VISIBLE_DEVICES=0
CUDA_VISIBLE_DEVICES=0
CUDA_DEVICE_ORDER=PCI_BUS_ID

# Faster-Whisper Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16

# Database Configuration
DATABASE_PATH=/data/db/mem.duckdb

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
MAX_UPLOAD_SIZE=5368709120

# RTMP Configuration
RTMP_PORT=1935
RTMP_MAX_STREAMS=10

# Logging
LOG_LEVEL=INFO

# Performance Tuning
WORKERS=4
THREADS_PER_WORKER=2